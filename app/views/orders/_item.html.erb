<tr>
  <td>
    <%= image_tag product.image.tiny.url %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <div>Item Price: <%= humanized_money_with_symbol product.price %></div>
  </td>
  <td>
    <div>Item Quantity: <%= quantity %></div>

  </td>
  <td>
    <div>Item Total: <%= humanized_money_with_symbol product.price * quantity %></div>
  </td>
</tr>
